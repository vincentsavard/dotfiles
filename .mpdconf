# Files and directories
music_directory	"/home/vincent/music"
playlist_directory "/home/vincent/.mpd/playlists"
db_file "/home/vincent/.mpd/mpd.db"
log_file "/home/vincent/.mpd/mpd.log"
pid_file "/home/vincent/.mpd/mpd.pid"
state_file "/home/vincent/.mpd/mpdstate"
sticker_file "/home/vincent/.mpd/sticker.sql"

# General music daemon options
bind_to_address "127.0.0.1"

# Input
input {
      plugin "curl"
}

# Audio Output
audio_output {
     type "alsa"
     name "My ALSA Device"
     mixer_type "software"
}
